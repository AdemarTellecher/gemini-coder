{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "ESNext"],
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "strict": true,
    "jsx": "react-jsx",
    "types": ["chrome", "webextension-polyfill", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@ui/*": ["../ui/src/*"]
    }
  },
  "include": ["src/**/*", "../shared/src/**/*", "../ui/src/**/*"]
}
