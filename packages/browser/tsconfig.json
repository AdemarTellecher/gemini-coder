{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "strict": true,
    "types": ["chrome", "webextension-polyfill"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "../shared/src/**/*.ts"]
}
