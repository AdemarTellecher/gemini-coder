{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "strict": true,
    "jsx": "react-jsx",
    "types": ["chrome", "webextension-polyfill"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "../shared/src/**/*.ts"]
}
